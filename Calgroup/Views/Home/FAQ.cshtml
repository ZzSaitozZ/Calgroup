@{
    ViewBag.Title = "Câu hỏi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Calgroup.Question>

<h2 style="text-transform: uppercase;text-align: center;font-weight: bold;font-size: 50px;color: #0075bf;margin: 20px 0px;">Những câu hỏi thường gặp</h2>
<hr style="border: 0; height: 1px; background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));" />
<div class="row justify-content-center">
    <div class="col-md-8 FAQ">
        @foreach (var Cauhoi in Model)
        {
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary FAQ-button" data-toggle="modal" data-target="#exampleModalLong" data-alias="@Cauhoi.AliasName" value="@Cauhoi.Title">
                @Cauhoi.Title
            </button>
        }
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document" style="max-width:800px">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('.FAQ-button').click(function () {
        $('.modal-title').text($(this).prop("value"))
        $.ajax({
            type: 'Post',
            url: '/getDetail',
            dataType: 'json',
            data: { alias: $(this).attr("data-alias") },
            success: function (data) {
                var content = '<div class="container" >' + data + '</div>';
                $('.modal-body').html(content);
            }
        });

    })
</script>
